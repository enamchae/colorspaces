{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",

		"useDefineForClassFields": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,

		"baseUrl": "./",
		// Must update in jest.config.ts
		"paths": {
			"@src/*": ["src/*"],
		},
	},
	
	// Allows jest.config.ts to work with type: module
	"ts-node": {
		"moduleTypes": {
			"jest.config.ts": "cjs",
		},
	},
}